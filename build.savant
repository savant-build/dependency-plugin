project(group: "org.savantbuild.plugin", name: "dependency", version: "2.0.0-RC.1", licenses: ["ApacheV2_0"]) {
  workflow {
    fetch {
      cache()
      url(url: "https://repository.savantbuild.org")
    }
    publish {
      cache()
    }
  }

  publishWorkflow {
    subversion(repository: "https://svn.savantbuild.org")
  }

  dependencies {
    group(name: "provided") {
      dependency(id: "org.savantbuild:savant-core:2.0.0-RC.1")
      dependency(id: "org.savantbuild:savant-dependency-management:2.0.0-RC.1")
      dependency(id: "org.savantbuild:savant-utils:2.0.0-RC.1")
    }
    group(name: "compile") {
      dependency(id: "org.ow2.asm:asm:6.1.1")
      dependency(id: "org.savantbuild:savant-io:2.0.0-RC.1")
    }
    group(name: "test-compile", export: false) {
      dependency(id: "org.testng:testng:6.8.7")
    }
  }

  publications {
    standard()
  }
}

// Plugins
dependency = loadPlugin(id: "org.savantbuild.plugin:dependency:1.0.0")
groovy = loadPlugin(id: "org.savantbuild.plugin:groovy:1.0.0")
groovyTestNG = loadPlugin(id: "org.savantbuild.plugin:groovy-testng:1.0.0")
idea = loadPlugin(id: "org.savantbuild.plugin:idea:1.0.1")
release = loadPlugin(id: "org.savantbuild.plugin:release-git:1.0.0")

// Plugin settings
groovy.settings.groovyVersion = "4.0"
groovy.settings.javaVersion = "1.8"
groovy.settings.jarManifest["Savant-Plugin-Class"] = "org.savantbuild.plugin.dep.DependencyPlugin"
groovyTestNG.settings.groovyVersion = "4.0"
groovyTestNG.settings.javaVersion = "1.8"
idea.settings.imlFile = "dependency-plugin.iml"
idea.settings.moduleMap = [
    "org.savantbuild:savant-core:2.0.0-RC.1"                 : "savant-core",
    "org.savantbuild:savant-dependency-management:2.0.0-RC.1": "savant-dependency-management",
    "org.savantbuild:savant-io:2.0.0-RC.1"                   : "savant-io",
    "org.savantbuild:savant-utils:2.0.0-RC.1"                : "savant-utils"
]

target(name: "clean", description: "Cleans the project") {
  groovy.clean()
}

target(name: "compile", description: "Compiles the project") {
  groovy.compile()
}

target(name: "jar", description: "JARs the project", dependsOn: ["compile"]) {
  groovy.jar()
}

target(name: "doc", description: "Generates the GroovyDoc", dependsOn: ["compile"]) {
  groovy.document()
}

target(name: "test", description: "Runs the project's tests", dependsOn: ["jar"]) {
  groovyTestNG.test()
}

target(name: "int", description: "Releases a local integration build of the project", dependsOn: ["test"]) {
  dependency.integrate()
}

target(name: "release", description: "Releases a full version of the project", dependsOn: ["clean", "test"]) {
  release.release()
}

target(name: "idea", description: "Updates the IntelliJ IDEA module file") {
  idea.iml()
}